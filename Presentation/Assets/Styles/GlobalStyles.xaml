<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Basstil för TextBlock: ellips, enkelrad, margin, tooltip -->
    <Style x:Key="ListCellTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="7 0 0 0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="ToolTip" Value="{Binding Text, RelativeSource={RelativeSource Self}}"/>
    </Style>


    <!-- Pris-cell: högerjusterad och tabulära siffror -->
    <Style x:Key="PriceCellTextBlockStyle"
       TargetType="TextBlock"
       BasedOn="{StaticResource ListCellTextBlockStyle}">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="Typography.NumeralAlignment" Value="Tabular"/>
        <Setter Property="Padding" Value="0 0 3 0"/>
    </Style>


    <!-- Ej inlagd grå/italic -->
    <Style x:Key="FallbackValueTextBlockStyle"
       TargetType="TextBlock"
       BasedOn="{StaticResource ListCellTextBlockStyle}">
        <Style.Triggers>
            <Trigger Property="Text" Value="Ej inlagd">
                <Setter Property="Foreground" Value="Gray"/>
                <Setter Property="FontStyle" Value="Italic"/>
            </Trigger>
        </Style.Triggers>
    </Style>


    <!-- Rubrikstilar -->
    <Style x:Key="ListHeaderTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="7,3"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ListHeaderRightTextBlockStyle"
       TargetType="TextBlock"
       BasedOn="{StaticResource ListHeaderTextBlockStyle}">
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    
    <Style x:Key="ReloadCancelButtonStyle" TargetType="Button">
        <Setter Property="Content" Value="Ladda om" />
        <Setter Property="Command" Value="{Binding RefreshCommand}" />
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="10"/>

        <Style.Triggers>
            <DataTrigger Binding="{Binding RefreshCommand.IsRunning}" Value="True">
                <Setter Property="Content" Value="Avbryt" />
                <Setter Property="Command" Value="{Binding CancelRefreshCommand}" />
                <Setter Property="Background" Value="#F28B82"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>


    <Style x:Key="MissingValueTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="FontStyle" Value="Italic"/>
    </Style>

</ResourceDictionary>